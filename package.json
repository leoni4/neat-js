{
    "name": "@leoni4/neat-js",
    "version": "0.1.0",
    "description": "NEAT Neural Network Implementation in TypeScript",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "start": "nodemon index.cjs",
        "build": "tsc",
        "dev": "tsc -w",
        "typecheck": "tsc --noEmit",
        "lint": "eslint --ext .js,.ts . --ignore-path .eslintignore .",
        "lint:fix": "eslint --fix --ext .js,.ts . --ignore-path .eslintignore .",
        "test": "npm run typecheck && npm run lint && npm run test:unit",
        "test:unit": "jest --no-cache --coverage=false",
        "test:unit:watch": "jest --no-cache --watch --coverage=false",
        "test:esm": "node tests/esm-smoke-test.mjs",
        "prepack": "npm run lint && npm run typecheck && npm run test && npm run build && npm run test:esm",
        "prepare": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leoni4/neat-js.git"
    },
    "keywords": [
        "neat",
        "neural-network"
    ],
    "author": "leoni4",
    "license": "MIT",
    "engines": {
        "node": ">=18"
    },
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "canvas": "^3.2.0",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^10.1.8",
        "express": "^5.1.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "konva": "^10.0.8",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.5",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3"
    }
}
