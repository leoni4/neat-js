{
    "name": "@leoni4/neat-js",
    "version": "0.1.0",
    "description": "NEAT Neural Network Implementation in TypeScript",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "start": "vite --config vite.config.demo.ts",
        "build": "tsc",
        "build:demo": "vite build --config vite.config.demo.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:esm": "node tests/esm-smoke-test.mjs",
        "lint": "eslint src tests",
        "typecheck": "tsc --noEmit",
        "prepack": "npm run lint && npm run typecheck && npm run test && npm run build && npm run test:esm",
        "prepare": "npm run build"
    },
    "lint-staged": {
        "*.{ts,js,json,md}": "prettier --write",
        "*.ts": "eslint --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leoni4/neat-js.git"
    },
    "keywords": [
        "neat",
        "neural-network",
        "genetic-algorithm",
        "evolutionary-algorithm",
        "reinforcement-learning",
        "neuroevolution",
        "artificial-intelligence",
        "machine-learning",
        "typescript",
        "deep-learning",
        "evolutionary-computation",
        "cognitive-modeling",
        "adaptive-systems",
        "genetic-programming"
    ],
    "author": "leoni4",
    "license": "MIT",
    "engines": {
        "node": ">=18"
    },
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "konva": "^10.0.0"
    },
    "peerDependenciesMeta": {
        "konva": {
            "optional": true
        }
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/ui": "^4.0.18",
        "canvas": "^3.2.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "konva": "^10.2.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    }
}
